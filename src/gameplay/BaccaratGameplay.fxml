<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="baccaratGameplay" prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gameplay.BaccaratGameplay">
    <children>
        <!-- Layout for top section -->
        <HBox layoutX="400.0" layoutY="25.0" prefHeight="100.0" prefWidth="200.0" spacing="50.0" AnchorPane.topAnchor="25.0" />

        <!-- Layout for middle section -->
        <VBox layoutX="130.0" layoutY="97.8" prefHeight="200.0" prefWidth="100.0" spacing="20.0" AnchorPane.leftAnchor="130.0" />

        <!-- Layout for bottom section -->
        <HBox layoutX="400.0" layoutY="527.0" prefHeight="100.0" prefWidth="200.0" spacing="50.0" AnchorPane.bottomAnchor="27.399999999999977" />

        <!-- Layout for the right section -->
        <VBox layoutX="870.0" layoutY="97.8" prefHeight="200.0" prefWidth="100.0" spacing="20.0" AnchorPane.rightAnchor="130.0" />

        <!-- StackPanes to display player information -->
        <StackPane fx:id="player1StackPane" layoutX="450.0" layoutY="-6.0" prefHeight="39.0" prefWidth="300.0" />
        <StackPane fx:id="player2StackPane" layoutY="58.0" prefHeight="39.0" prefWidth="300.0" />
        <StackPane fx:id="player3StackPane" layoutX="450.0" layoutY="478.0" prefHeight="39.0" prefWidth="300.0" />
        <StackPane fx:id="player4StackPane" layoutX="870.0" layoutY="58.0" prefHeight="39.0" prefWidth="300.0" />

        <!-- Deal button -->
        <Button alignment="CENTER" contentDisplay="CENTER" layoutX="560.0" layoutY="415.0" mnemonicParsing="false" onAction="#startGame" prefHeight="30.0" prefWidth="80.0" text="Deal" textAlignment="CENTER">
            <font>
                <Font name="Book Antiqua" size="20.0" />
            </font>
        </Button>

        <!-- ImageView for the card back -->
        <ImageView fx:id="cardBackImage" fitHeight="145.2" fitWidth="100.0" layoutX="550.0" layoutY="263.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <!-- Updated path for image -->
                <Image url="@/cardsimage/BACK.png" />
            </image>
        </ImageView>

        <!-- Label to display winner notification -->
        <StackPane layoutX="400.0" layoutY="157.0" prefHeight="150.0" prefWidth="400.0">
            <children>
                <Label fx:id="winnerNotification" alignment="CENTER" contentDisplay="CENTER" textAlignment="CENTER">
                    <font>
                        <Font name="Book Antiqua" size="20.0" />
                    </font>
                </Label>
            </children>
        </StackPane>
    </children>
</AnchorPane>
